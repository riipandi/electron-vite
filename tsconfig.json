{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "baseUrl": "./",
        "strict": true,
        "paths": {
            "@render/*": ["src/render/*"],
            "@main/*": ["src/main/*"],
            "@src/*": ["src/*"],
            "@root/*": ["./*"]
        },
        "allowSyntheticDefaultImports": true
    }
}
